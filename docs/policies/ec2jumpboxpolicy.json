{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeTags",
        "iam:ListSSHPublicKeys",
        "iam:GetSSHPublicKey",
        "iam:GetGroup"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::{{s3bucketname}}.users/*"
    }
  ]
}